<Window x:Class="EW_UPT_Helper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EW_UPT_Helper"
        mc:Ignorable="d"
        Title="EW UPT Helper" Height="125" Width="425">
    <Grid>
        
        <Label Margin="10,0,0,0">Plik UPT:</Label>
        <TextBox Name="filePath" IsEnabled="False" Visibility="Visible" Width="300" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,25,0,0"></TextBox>
        <Button Name="fileBtn" HorizontalAlignment="Left" VerticalAlignment="Top" Width="80" Height="20" Margin="320,25,0,0" Click="fileBtn_Click">Wybierz plik</Button>
        <Button Name="convertBtn" HorizontalAlignment="Left" VerticalAlignment="Top" Width="80" Height="30" Margin="10,50,0,0" Click="convertBtn_Click">Konwertuj</Button>
    </Grid>
</Window>
